<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/uiTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_covid_19_today"
        android:textColor="@color/colorAccent"
        android:textSize="22sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/uiTvCure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/uiTvDeath"
        app:layout_constraintStart_toStartOf="@+id/uiTvDeath"
        app:layout_constraintTop_toBottomOf="@+id/uiTvDeath"
        tools:text="Total : " />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/uiTvDeath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/uiTvCure"
        app:layout_constraintEnd_toEndOf="@+id/uiTvTotal"
        app:layout_constraintStart_toStartOf="@+id/uiTvTotal"
        app:layout_constraintTop_toBottomOf="@+id/uiTvTotal"
        tools:text="Total : " />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/uiTvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/uiTvDeath"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Total : " />


</androidx.constraintlayout.widget.ConstraintLayout>